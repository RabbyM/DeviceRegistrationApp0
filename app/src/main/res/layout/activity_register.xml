<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/darkGrey"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    tools:context=".activities.RegisterActivity">

    <EditText
        android:id="@+id/rUsernameEditText"
        android:layout_width="398dp"
        android:layout_height="60dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintVertical_bias=".3"
        android:paddingLeft="10dp"
        android:inputType="textPersonName"
        android:textStyle="bold"
        android:textColor="#FFF"
        android:textSize="25sp"
        android:drawableLeft="@drawable/login_resized"
        android:drawablePadding="10dp"/>

    <EditText
        android:id="@+id/rPasswordEditText"
        android:layout_width="398dp"
        android:layout_height="60dp"
        app:layout_constraintTop_toBottomOf="@id/rUsernameEditText"
        app:layout_constraintBottom_toTopOf="@id/rConfirmPasswordEditText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:paddingLeft="10dp"
        android:inputType="textPersonName|textPassword"
        android:textColor="#FFF"
        android:textSize="25sp"
        android:hint="Password?"
        android:drawableLeft="@drawable/lock_resized"
        android:drawablePadding="10dp"/>

    <EditText
        android:id="@+id/rConfirmPasswordEditText"
        android:layout_width="398dp"
        android:layout_height="60dp"
        app:layout_constraintTop_toBottomOf="@id/rPasswordEditText"
        app:layout_constraintBottom_toTopOf="@id/registerButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:paddingLeft="10dp"
        android:inputType="textPersonName|textPassword"
        android:textColor="#FFF"
        android:textSize="25sp"
        android:hint="Confirm Password"
        android:drawableLeft="@drawable/lock_resized"
        android:drawablePadding="10dp"/>

    <Button
        android:id="@+id/registerButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/rConfirmPasswordEditText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintVertical_bias=".4"
        android:alpha="1"
        android:background="@drawable/rounded_solid_gray"
        android:ellipsize="start"
        android:onClick="registerClick"
        android:text="@string/register"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/rAskRegisterTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias=".35"
        app:layout_constraintTop_toBottomOf="@id/registerButton"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias=".2"
        android:text="Already registered?"
        android:inputType="textPersonName"
        android:textColor="#CFF"
        android:textSize="20sp"/>

    <TextView
        android:id="@+id/rLoginTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/rAskRegisterTextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias=".1"
        app:layout_constraintTop_toBottomOf="@id/registerButton"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias=".2"
        android:text="LOGIN"
        android:inputType="textPersonName"
        android:textColor="#F00"
        android:textSize="20sp"/>

    <TextView
        android:id="@+id/alertTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/rAskRegisterTextView"
        app:layout_constraintVertical_bias="0.2"
        android:visibility="invisible"/>

</androidx.constraintlayout.widget.ConstraintLayout>