<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#112"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    tools:context=".RegisterActivity">

    <EditText
        android:id="@+id/rUsernameEditText"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="200dp"
        android:layout_marginEnd="10dp"
        android:paddingLeft="10dp"
        android:inputType="textPersonName"
        android:textStyle="bold"
        android:textColor="#FFF"
        android:textSize="25sp"
        android:drawableLeft="@drawable/login_resized"
        android:drawablePadding="10dp"/>

    <EditText
        android:id="@+id/rPasswordEditText"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="260dp"
        android:layout_marginEnd="10dp"
        android:paddingLeft="10dp"
        android:inputType="textPersonName|textPassword"
        android:textColor="#FFF"
        android:textSize="25sp"
        android:hint="Password?"
        android:drawableLeft="@drawable/lock_resized"
        android:drawablePadding="10dp"/>

    <EditText
        android:id="@+id/rConfirmPasswordEditText"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="320dp"
        android:layout_marginEnd="10dp"
        android:paddingLeft="10dp"
        android:inputType="textPersonName|textPassword"
        android:textColor="#FFF"
        android:textSize="25sp"
        android:hint="Confirm Password"
        android:drawableLeft="@drawable/lock_resized"
        android:drawablePadding="10dp"/>

    <TextView
        android:id="@+id/rAskRegisterTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="400dp"
        android:text="Already registered?"
        android:inputType="textPersonName"
        android:textColor="#CFF"
        android:textSize="20sp"/>

    <TextView
        android:id="@+id/rLoginTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="220dp"
        android:layout_marginLeft="220dp"
        android:layout_marginTop="400dp"
        android:text="LOGIN"
        android:inputType="textPersonName"
        android:textColor="#F00"
        android:textSize="20sp"/>

</RelativeLayout>